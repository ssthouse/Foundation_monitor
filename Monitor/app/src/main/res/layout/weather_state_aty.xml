<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <!--上面的actionbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/blue_level0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_iv_back"
            android:layout_width="@dimen/actionbar_icon_width"
            android:layout_height="@dimen/actionbar_icon_height"
            android:layout_gravity="center_vertical"
            android:background="@drawable/click_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/id_tv_ab_prjName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="自然条件"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbar_textsize_normal" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/id_tv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/click_selector"
            android:gravity="center_vertical|right"
            android:paddingRight="10dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbar_textsize_normal" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--左边的文字-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="气温:"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="雨量:"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="风速:"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="水位:"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <!--右边的Edittext-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <EditText
                android:maxLines="1"
                android:id="@+id/id_et_temperature"
                android:layout_gravity="center_vertical|left"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/id_et_rainFall"
                android:layout_gravity="center_vertical|left"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/id_et_windSpeed"
                android:layout_gravity="center_vertical|left"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:maxLines="1"
                android:id="@+id/id_et_waterLevel"
                android:layout_gravity="center_vertical|left"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/id_tv_smart_fill"
        android:background="@drawable/blue_button_click"
        android:padding="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智能填充"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>
</LinearLayout>
